<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:forms="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             x:Class="EasyTimeTable.DayAndWeekendPage">
    <ContentPage.Resources>
        <x:Double x:Key="firstColWidth">40</x:Double>
        <x:Double x:Key="firstColWidthTwice">80</x:Double>
    </ContentPage.Resources>
    <NavigationPage.TitleView>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{StaticResource firstColWidthTwice}"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <forms:CachedImage Source="{StaticResource AddIconString}"
                               BackgroundColor="Transparent"
                               Grid.Column="0"
                               HorizontalOptions="Start"
                               Aspect="AspectFit">
                <forms:CachedImage.GestureRecognizers>
                    <TapGestureRecognizer
                        Tapped="OnMenuPageButtonClicked"/>
                </forms:CachedImage.GestureRecognizers>
            </forms:CachedImage>
            <Label Grid.Column="1"
                   Grid.ColumnSpan="2"
                   FontSize="Medium"
                   TextColor="White"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"/>
            <forms:CachedImage Source="sun64.png"
                                   x:Name="Day"
                                   BackgroundColor="Transparent"
                                   Grid.Column="3"
                                   HorizontalOptions="End"
                                   Aspect="AspectFit">
                <forms:CachedImage.GestureRecognizers>
                    <TapGestureRecognizer
                        Tapped="OnChangeDayToNightButtonClicked"/>
                </forms:CachedImage.GestureRecognizers>
            </forms:CachedImage>
            <Button BackgroundColor="Transparent"
                        Text="주말"
                        TextColor="White"
                        Clicked="OnChangeWeekendToWeekdaysButtonClicked"
                        x:Name="Weekend"
                        IsVisible="true"
                        Grid.Column="4"/>
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Content>

        <Grid x:Name="DayAndWeekend"
                 RowSpacing="1"
                 BackgroundColor="Black">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"
                     BackgroundColor="Gray"
                     ColumnSpacing="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{StaticResource firstColWidth}"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackLayout Grid.Column="0" BackgroundColor="White">
                    <Label Text="시간" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
                </StackLayout>
                <StackLayout Grid.Column="1" BackgroundColor="White">
                    <Label Text="토" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
                </StackLayout>
                <StackLayout Grid.Column="2" BackgroundColor="White">
                    <Label Text="일" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
                </StackLayout>
            </Grid>
            <ScrollView Grid.Row="1">
                <StackLayout>
                    <Grid RowSpacing="1"
                         ColumnSpacing="1"
                         BackgroundColor="LightGray"
                         x:Name="DayAndWeekendBody">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="{StaticResource RowHeight}"/>
                            <RowDefinition Height="{StaticResource RowHeight}"/>
                            <RowDefinition Height="{StaticResource RowHeight}"/>
                            <RowDefinition Height="{StaticResource RowHeight}"/>
                            <RowDefinition Height="{StaticResource RowHeight}"/>
                            <RowDefinition Height="{StaticResource RowHeight}"/>
                            <RowDefinition Height="{StaticResource RowHeight}"/>
                            <RowDefinition Height="{StaticResource RowHeight}"/>
                            <RowDefinition Height="{StaticResource RowHeight}"/>
                            <RowDefinition Height="{StaticResource RowHeight}"/>
                            <RowDefinition Height="{StaticResource RowHeight}"/>
                            <RowDefinition Height="{StaticResource RowHeight}"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="{StaticResource firstColWidth}"/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </StackLayout>
            </ScrollView>
        </Grid>

    </ContentPage.Content>
</ContentPage>