<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyTimeTable.MenuItemPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource ThemeColor}"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
                <Setter Property="CornerRadius" Value="7"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="WidthRequest" Value="150"/>
                <Setter Property="Margin" Value="0,10,0,0"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Button Text="일정 추가하기"
                    Clicked="OnAddTimetableButtonClicked"/>
            <!--<Button Text="달력보기"
                    Clicked="OnDisplayCalendarButtonClicked"/>-->
            <!--<Button Text="일간표 보기"
                    Clicked="OnDisplayDailyScheduleButtonClicked"/>-->
            <Button Text="설정"
                    Clicked="OnConfigurationButtonClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>