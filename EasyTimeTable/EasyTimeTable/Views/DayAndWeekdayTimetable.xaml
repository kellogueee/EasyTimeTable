                <ColumnDefinition Width="55"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackLayout Style="{StaticResource GridCell}" Grid.Column="0" Margin="0,0.5,0,0">
                <Label Text="{x:Static resource:AppResources.Hour}" Style="{StaticResource LabelinCell}"/>
            </StackLayout>
            <StackLayout Style="{StaticResource GridCell}" Grid.Column="1" Margin="0,0.5,0,0">
                <Label Text="{x:Static resource:AppResources.Monday}" Style="{StaticResource LabelinCell}"/>
