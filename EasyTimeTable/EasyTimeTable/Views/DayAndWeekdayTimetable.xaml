            </StackLayout>
            <StackLayout Style="{StaticResource GridCell}" Grid.Column="3" Margin="0,0.5,0,0">
                <Label Text="{x:Static resource:AppResources.Wednesday}" Style="{StaticResource LabelinCell}"/>
            </StackLayout>
            <StackLayout Style="{StaticResource GridCell}" Grid.Column="4" Margin="0,0.5,0,0">
                <Label Text="{x:Static resource:AppResources.Thursday}" Style="{StaticResource LabelinCell}"/>
            </StackLayout>
            <StackLayout Style="{StaticResource GridCell}" Grid.Column="5" Margin="0,0.5,0,0">
                <Label Text="{x:Static resource:AppResources.Friday}" Style="{StaticResource LabelinCell}"/>
            </StackLayout>
        </Grid>

