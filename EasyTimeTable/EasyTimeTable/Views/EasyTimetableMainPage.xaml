    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Frame">
                <Setter Property="Padding" Value="1"/>
            </Style>
            <Style TargetType="Label">
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal">
            <Label FontSize="Title" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" x:Name="todayTitle"/>
            <forms:CachedImage Source="sun64.png" 
                           BackgroundColor="Transparent" 
                           Aspect="AspectFit" 
                           HorizontalOptions="End"
                           Margin="0,0,20,0">
                <forms:CachedImage.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnDayScheduleTapped"/>
                </forms:CachedImage.GestureRecognizers>
            </forms:CachedImage>
            <forms:CachedImage Source="moon64.png" 
                           BackgroundColor="Transparent" 
                           Aspect="AspectFit" 
                           HorizontalOptions="End"
                           Margin="0,0,20,0">
                <forms:CachedImage.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnNightScheduleTapped"/>
                </forms:CachedImage.GestureRecognizers>
            </forms:CachedImage>
        </StackLayout>
    </NavigationPage.TitleView>
